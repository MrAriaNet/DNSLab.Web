@attribute [Route(AllRoutes.Dashboard)]
@attribute [Authorize]
<SeoProvider Title="داشبورد" />

<MudText Typo="Typo.h1" Align="Align.Center">داشبورد</MudText>
<MudText Class="mt-5 mb-10" Align="Align.Center">وضعیت کلی رکورد ها و دامنه ها و هاست نیم ها</MudText>

<MudGrid>
    <MudItem xs="12" md="6" lg="3">
        <MudPaper Elevation="0">
            <MudStack AlignItems="AlignItems.Center" Class="py-1" Spacing="1">
                <MudText>دامنه ها</MudText>
                <MudText Typo="Typo.h3">@ZoneCount</MudText>
            </MudStack>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" md="6" lg="3">
        <MudPaper Elevation="0">
            <MudStack AlignItems="AlignItems.Center" Class="py-1" Spacing="1">
                <MudText>رکورد ها</MudText>
                <MudText Typo="Typo.h3">@RecordsCount</MudText>
            </MudStack>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" md="6" lg="3">
        <MudPaper Elevation="0">
            <MudStack AlignItems="AlignItems.Center" Class="py-1" Spacing="1">
                <MudText>هاست‌نِیم ها</MudText>
                <MudText Typo="Typo.h3">@DDNSsCount</MudText>
            </MudStack>
        </MudPaper>
    </MudItem>
</MudGrid>

<MudAlert Class="mt-2" Severity="Severity.Normal" Dense ContentAlignment="HorizontalAlignment.Start" Variant="Variant.Text">
    @if (DDNSsCount != null && DDNSsCount == 0)
    {
        <MudText Typo="Typo.body2">تا کنون هیچ هاست نِیمی ثبت نشده است.</MudText>
    }
    <MudLink Underline="Underline.None" Href="@AllRoutes.DDNSHostNames"><MudText Typo="Typo.body2">مدیریت هاست نِیم ها</MudText></MudLink>
</MudAlert>

