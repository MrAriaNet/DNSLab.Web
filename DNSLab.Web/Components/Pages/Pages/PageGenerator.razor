@using DNSLab.Web.Utilities
@attribute [Route(AllRoutes.Blog + "/{Url}")]
@attribute [Route(AllRoutes.Wiki + "/{*Url}")]
@attribute [AllowAnonymous]

@if (_Page != null)
{
    <SeoProvider Title="@_Page.Title" Meta_Description="@_Page.Description" />

    <MudCard Elevation="0">
        <MudCardHeader>
            <CardHeaderContent>
                <MudGrid Justify="Justify.SpaceAround" Spacing="1">
                    <MudItem xs="12" lg="3">
                        <MudStack Row AlignItems="AlignItems.Center">
                            <MudText Typo="Typo.body2">نویسنده : </MudText>
                            @((MarkupString)ProfileImageCreator.GenerateSVG(_Page.User!.Id, 25))
                            <MudText> @_Page.User?.FullName</MudText>
                        </MudStack>
                    </MudItem>
                    <MudItem xs="12" lg="3">
                        <MudText Typo="Typo.body2">تاریخ انتشار : @_Page.PublishDate?.ToLocalTime().ToPersianDateTime()</MudText>
                    </MudItem>
                    <MudItem xs="12" lg="3">
                        <MudText Typo="Typo.body2">آخرین بروزرسانی : @_Page.UpdateDate?.ToLocalTime().ToPersianDateTime()</MudText>
                    </MudItem>
                    <MudItem xs="12" lg="3">
                        <MudText Typo="Typo.body2">تعداد بازدید : @_Page.VisitCount.ToString()</MudText>
                    </MudItem>
                </MudGrid>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MarkdownViewer MarkdownText="@_Page.Body" />
        </MudCardContent>
    </MudCard>
}