@using System.Globalization
<MudDialog ContentClass="py-2">
    <DialogContent>
        <MudText Class="mb-1">لطفا منبلغ خود را به صورت ریالی وارد نمایید</MudText>
        <MudTextField T="long" Variant="Variant.Outlined" Text="@_DisplayAmount" TextChanged="OnAmountTextChanged" TextUpdateSuppression="false" Immediate="true" ErrorText="@_ErrorMessage" Error="!String.IsNullOrEmpty(_ErrorMessage)" />
    </DialogContent>
    <DialogActions>
        <BaseButton OnClick="()=>_MudDialog.Close()">انصراف</BaseButton>
        <BaseButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Pay">پرداخت</BaseButton>
    </DialogActions>
</MudDialog>