@attribute [Route(AllRoutes.RegisterAccount)]
<SeoProvider Title="صفحه ثبت نام" Meta_Description="ثبت نام در سیستم سایت DNSLab" />

<MudText Typo="Typo.h1" Align="Align.Center">ثبت نام</MudText>
<MudText Class="mt-5 mb-10" Align="Align.Center">برای ثبت نام در سایت DNSLab لطفا اطلاعات زیر رو تکمیل نمایید</MudText>

<MudStack AlignItems="AlignItems.Center" Justify="Justify.Center" Class="pt-10">
    <MudGrid Justify="Justify.Center">
        <MudItem lg="4" md="6" sm="8" xs="12">
            <MudCard Elevation="0" Class="pa-5">
                <MudCardContent>
                    <EditForm Model="_RegisterUserDTO" Context="ctx">
                        <DataAnnotationsValidator />
                        <MudText Typo="Typo.caption">ایمیل</MudText>
                        <MudTextField T="string" Placeholder="ایمیل" Variant="Variant.Outlined" Class="my-2 dnslab-ltr" For="()=>_RegisterUserDTO.Email" @bind-Value="_RegisterUserDTO.Email"></MudTextField>
                        <MudText Typo="Typo.caption">رمز عبور</MudText>
                        <MudTextField T="string" InputType="InputType.Password" Placeholder="رمز عبور" Variant="Variant.Outlined" Class="my-2 dnslab-ltr" For="()=>_RegisterUserDTO.Password" @bind-Value="_RegisterUserDTO.Password"></MudTextField>
                        <MudText Typo="Typo.caption">تکرار رمز عبور</MudText>
                        <MudTextField T="string" InputType="InputType.Password" Placeholder="تکرار رمز عبور" Variant="Variant.Outlined" Class="my-2 dnslab-ltr" For="()=>_RegisterUserDTO.ConfirmPassword" @bind-Value="_RegisterUserDTO.ConfirmPassword"></MudTextField>
                        <MudText Typo="Typo.caption">با ثبت‌نام، شما موافقت خود را با <MudLink Href="@AllRoutes.Terms" Underline="Underline.None">شرایط و ضوابط استفاده</MudLink> از خدمات DNSLab اعلام می‌نمایید.</MudText>
                        <BaseButton Color="Color.Primary" Class="mt-2" ButtonType="ButtonType.Submit" EditContext="ctx" OnClick="RegisterUser" Variant="Variant.Filled" FullWidth>ثبت نام</BaseButton>
                        <MudText Align="Align.Center" Class="mt-3">حساب کاربری داری ؟ <MudLink Href="@AllRoutes.Login" Underline="Underline.None">وارد شو</MudLink></MudText>
                    </EditForm>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudStack>