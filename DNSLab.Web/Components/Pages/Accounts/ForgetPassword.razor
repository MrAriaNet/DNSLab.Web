@attribute [Route(AllRoutes.ForgetPassword)]
<SeoProvider Title="فراموشی رمز عبور" Meta_Description="فراموشی رمز عبور سایت DNSLab" />

<MudStack AlignItems="AlignItems.Center">
    <MudContainer MaxWidth="MaxWidth.ExtraSmall" Class="mt-6">
        <MudCard Elevation="0" Class="pa-5">
            <MudText Typo="Typo.h3" Class="my-3">فراموشی رمز عبور</MudText>
            @if (_ResetPasswordSend)
            {
                <MudAlert ContentAlignment="HorizontalAlignment.Start" Dense Severity="Severity.Success">
                    <MudText Typo="Typo.body2">لینک بازنشانی رمز عبور برای ایمیل @_ForgetPasswordDTO.Email ارسال شد.</MudText>
                    <MudText Typo="Typo.body2">لطفا پوشه Spam نیز بررسی شود</MudText>
                </MudAlert>
            }
            else
            {
                <MudText>برای دریافت لینک بازنشانی رمز عبور لطفا آدرس ایمیل خود را وارد نمایید.</MudText>
                <EditForm Model="_ForgetPasswordDTO" Context="ctx">
                    <DataAnnotationsValidator />
                    <MudTextField T="string" Placeholder="ایمیل" Variant="Variant.Outlined" Class="my-2 mud-ltr" For="()=>_ForgetPasswordDTO.Email" @bind-Value="_ForgetPasswordDTO.Email"></MudTextField>
                    <BaseButton Color="Color.Primary" ButtonType="ButtonType.Submit" EditContext="ctx" OnClick="SendForgetPasswordMail" Variant="Variant.Filled" FullWidth>ارسال لینک بازنشانی رمز عبور</BaseButton>
                </EditForm>
            }
            <BaseButton Href="@AllRoutes.Login" Class="mt-2" Color="Color.Info">بازکشت به صفحه ورود</BaseButton>
        </MudCard>
    </MudContainer>
</MudStack>
