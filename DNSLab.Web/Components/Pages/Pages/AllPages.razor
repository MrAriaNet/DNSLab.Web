@using DNSLab.Web.DTOs.Repositories.Page
@attribute [Route(AllRoutes.AllPages)]
@attribute [Authorize]
<SeoProvider Title="مطالب سایت" />

<MudText Typo="Typo.h1" Align="Align.Center">مطالب سایت</MudText>

<MudCard Elevation="0">
    <MudCardHeader>
        <CardHeaderContent>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudButton Variant="Variant.Filled" Size="Size.Small" Color="Color.Primary" Href="@AllRoutes.Page" EndIcon="@DNSLabIcons.Add">افزودن صفحه جدید</MudButton>
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent>
        <MudDataGrid T="PageInfoDTO" Items="_Pages?.OrderByDescending(x=>x.UpdateDate?? x.CreateDate)" Loading="_IsLoading" Dense Hover Elevation="0" HorizontalScrollbar>
            <NoRecordsContent>
                <NoRecordFound />
            </NoRecordsContent>
            <Columns>
                <PropertyColumn Property="x=>x.Type.Name" Title="نوع" StickyRight />
                <PropertyColumn Property="x=>x.Title" Title="عنوان" StickyRight />
                <PropertyColumn Property="x=>x.VisitCount.ToString()" Title="تعداد بازدید" />
                <PropertyColumn Property="x=>x.URL" Title="URL" />
                <PropertyColumn Property="x=>x.CreateDate" Title="ایجاد">
                    <CellTemplate>
                        <MudText>@context.Item.CreateDate.ToLocalTime().ToPersianDateTime()</MudText>
                    </CellTemplate>
                </PropertyColumn>
                <PropertyColumn Property="x=>x.UpdateDate" Title="ویرایش">
                    <CellTemplate>
                        @if (context.Item.UpdateDate != null)
                        {
                            <MudText>@context.Item.UpdateDate.Value.ToLocalTime().ToPersianDateTime()</MudText>
                        }
                    </CellTemplate>
                </PropertyColumn>
                <PropertyColumn Property="x=>x.PublishDate" Title="انتشار">
                    <CellTemplate>
                        @if (context.Item.PublishDate != null)
                        {
                            <MudText>@context.Item.PublishDate.Value.ToLocalTime().ToPersianDateTime()</MudText>
                        }
                    </CellTemplate>
                </PropertyColumn>
                <PropertyColumn Property="x=>x.Description" Title="توضیحات" />
                <TemplateColumn StickyLeft>
                    <CellTemplate>
                        <MudStack Row Justify="Justify.FlexEnd" Spacing="1">
                            <BaseIconButton Href="@(AllRoutes.Page+"/"+context.Item.Id)" DropShadow="false" Size="Size.Small" Variant="Variant.Filled" Icon="@DNSLabIcons.Edit" />
                            @if (context.Item.IsPublished)
                            {
                                <BaseIconButton Href="@($"{context.Item.Type.Url}/{context.Item.URL}")" DropShadow="false" Size="Size.Small" Variant="Variant.Filled" Icon="@Icons.Material.Rounded.OpenInBrowser" />
                            }
                            <BaseIconButton OnClick="()=> DeletePage(context.Item)" Color="Color.Error" Size="Size.Small" Variant="Variant.Filled" Icon="@DNSLabIcons.Delete" />
                        </MudStack>
                    </CellTemplate>
                </TemplateColumn>
            </Columns>
        </MudDataGrid>
    </MudCardContent>
</MudCard>