@using DNSLab.Web.Enums
<MudAppBar Elevation="0" Class="baackdrop-bluered" Style="z-index: calc(var(--mud-zindex-appbar) + 2);">
    <MudIconButton Icon="@DNSLabIcons.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="MenuOnClick" />
    <DarkModeSwitcher DarkModeChanged="DarkModeChanged" />
    <MudSpacer />
    <MudIconButton Href="https://github.com/AkbarAsghari/DNSLab.Web" Icon="@DNSLabIcons.Github" Color="Color.Inherit" Target="_blank" />
    <AuthorizeView>
        <NotAuthorized>
            <BaseButton Class="mr-3" Variant="Variant.Text" EndIcon="@DNSLabIcons.Login" Href="@AllRoutes.Login">ورود</BaseButton>
            <BaseButton Variant="Variant.Text" EndIcon="@DNSLabIcons.PersonAdd" Href="@AllRoutes.RegisterAccount">ثبت نام</BaseButton>
        </NotAuthorized>
    </AuthorizeView>
</MudAppBar>

@code {
    [Parameter]
    public EventCallback MenuOnClick { get; set; }
    [Parameter]
    public EventCallback<DarkModeEnum> DarkModeChanged { get; set; }
}