@using DNSLab.Web.DTOs.Repositories.Wallet
@attribute [Route(AllRoutes.WalletTransactions)]
@attribute [Authorize]
<SeoProvider Title="تراکنش ها" />

<MudText Typo="Typo.h1" Align="Align.Center">تراکنش‌ها</MudText>
<MudText Class="mt-5 mb-10" Align="Align.Center">تمام تراکنش ها و وضعیت آن ها</MudText>

<MudCard Elevation="0">
    <MudCardContent>
        @if (_AllTransactions != null)
        {
            <MudDataGrid T="WalletTransactionDTO" Items="_AllTransactions.Results" Dense Hover Elevation="0" FixedHeader SortMode="SortMode.None" Striped Loading="_Loading">
                <NoRecordsContent>
                    <NoRecordFound />
                </NoRecordsContent>
                <Columns>
                    <PropertyColumn Property="x=>x.TransactionType" Title="نوع" />
                    <TemplateColumn Title="مبغ(ريال)">
                        <CellTemplate>
                            <MudText>@context.Item.Amount.Separate3Digits()</MudText>
                        </CellTemplate>
                    </TemplateColumn>
                    <PropertyColumn Property="x=>x.Description" Title="توضیحات" />
                    <PropertyColumn Property="x=>x.CreateDate" Title="زمان">
                        <CellTemplate>
                            <MudText>@context.Item.CreateDate.ToLocalTime().ToPersianDateTime()</MudText>
                        </CellTemplate>
                    </PropertyColumn>
                </Columns>
            </MudDataGrid>

            <MudPagination Rectangular="true" Variant="Variant.Filled" Count="_AllTransactions.PageCount" Class="mt-2" SelectedChanged="PageChanged" />
        }
    </MudCardContent>
</MudCard>