@attribute [Route(AllRoutes.Dashboard)]
@attribute [Authorize]
<SeoProvider Title="داشبورد" />

<MudCard Elevation="0">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h5">داشبورد</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudGrid>
            <MudItem xs="12" md="6" lg="3">
                <MudPaper Style="@($"color:{Colors.Orange.Lighten1};")" Outlined>
                    <MudStack AlignItems="AlignItems.Center" Class="py-1" Spacing="1">
                        <MudText>دامنه ها</MudText>
                        <MudText Typo="Typo.h3">@ZoneCount</MudText>
                    </MudStack>
                </MudPaper>
            </MudItem>
            <MudItem xs="12" md="6" lg="3">
                <MudPaper Style="@($"color:{Colors.Green.Lighten1};")" Outlined>
                    <MudStack AlignItems="AlignItems.Center" Class="py-1" Spacing="1">
                        <MudText>رکورد ها</MudText>
                        <MudText Typo="Typo.h3">@RecordsCount</MudText>
                    </MudStack>
                </MudPaper>
            </MudItem>
            <MudItem xs="12" md="6" lg="3">
                <MudPaper Style="@($"color:{Colors.Teal.Lighten1};")" Outlined>
                    <MudStack AlignItems="AlignItems.Center" Class="py-1" Spacing="1">
                        <MudText>هاست‌نِیم ها</MudText>
                        <MudText Typo="Typo.h3">@DDNSsCount</MudText>
                    </MudStack>
                </MudPaper>
            </MudItem>
            <MudItem xs="12" md="6" lg="3">
                <MudPaper Style="@($"color:{Colors.Blue.Lighten1};")" Outlined>
                    <MudStack AlignItems="AlignItems.Center" Class="py-1" Spacing="1">
                        <MudText>هاست‌نِیم های بروز شده (24 س)</MudText>
                        <MudText Typo="Typo.h3">@TodayDDNSIpChangesCount</MudText>
                    </MudStack>
                </MudPaper>
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>
