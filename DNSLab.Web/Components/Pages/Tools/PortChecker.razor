@attribute [Route(AllRoutes.PortChecker)]

<SeoProvider Title="Port Checker - بررسی باز بودن پورت" Meta_Description="آدرس هاست مورد نظر خود را با استفاده از این ابزار پینگ بگیرید" />

<MudText Typo="Typo.h1" Align="Align.Center">Port Checker - بررسی باز بودن پورت</MudText>
<MudText Class="mt-5 mb-10" Align="Align.Center">
    برای بررسی پورت لطفا آدرس آی‌پی یا هاست و پورت مورد نظر خود را وارد نمایید
    <MudFlexBreak />
    توجه فرمایید که عملیات بررسی پورت توسط سرور DNSLab انجام میشود
</MudText>

<MudCard Elevation="0">
    <MudCardContent>
        <MudGrid>
            <MudItem sm="4" xs="12">
                <MudTextField T="string" Label="آدرس هاست" Class="dnslab-ltr" Placeholder="dnslab.link" Variant="Variant.Outlined" @bind-Value="_Host" />
            </MudItem>
            <MudItem sm="2" xs="12">
                <MudTextField T="int" Label="پورت" Class="dnslab-ltr" Placeholder="90" Variant="Variant.Outlined" @bind-Value="_Port" />
            </MudItem>
        </MudGrid>

        <BaseButton Class="my-2" EndIcon="@DNSLabIcons.Search" Variant="Variant.Filled" Color="Color.Primary" OnClick="CalcPing">بررسی</BaseButton>

        @if (_Result != null)
        {
            <MudAlert Severity="@(_Result == true ? Severity.Success : Severity.Error)" Dense NoIcon>
                @if (_Result == true)
                {
                    <MudText Typo="Typo.body2">Port @_Port is open</MudText>
                }
                else
                {
                    <MudText Typo="Typo.body2">Port @_Port is closed</MudText>
                }
            </MudAlert>
        }
    </MudCardContent>
</MudCard>