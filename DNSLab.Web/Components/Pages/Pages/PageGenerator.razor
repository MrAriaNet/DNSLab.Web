@attribute [Route(AllRoutes.Blog + "/{Url}")]
@attribute [Route(AllRoutes.KnowledgeBase + "/{Url}")]
@attribute [AllowAnonymous]

@if (_Page != null)
{
    <SeoProvider Title="@_Page.Title" Meta_Description="@_Page.Description" />

    <MudCard Elevation="0">
        <MudCardHeader>
            <CardHeaderContent>
                <MudStack Row AlignItems="AlignItems.Center" Justify="Justify.FlexEnd">
                    <MudText Typo="Typo.body2">تاریخ انتشار : @_Page.PublishDate?.ToLocalTime().ToPersianDateTime()</MudText>
                    <MudText Typo="Typo.body2">آخرین بروزرسانی : @_Page.UpdateDate?.ToLocalTime().ToPersianDateTime()</MudText>
                    <MudText Typo="Typo.body2">تعداد بازدید : @_Page.VisitCount.ToString()</MudText>
                </MudStack>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MarkdownViewer MarkdownText="@_Page.Body" />
        </MudCardContent>
    </MudCard>
}