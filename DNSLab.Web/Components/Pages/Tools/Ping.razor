@attribute [Route(AllRoutes.Ping)]

<SeoProvider Title="Ping - پینگ" Meta_Description="آدرس هاست مورد نظر خود را با استفاده از این ابزار پینگ بگیرید" />

<MudAlert Severity="Severity.Info" ContentAlignment="HorizontalAlignment.Start" Class="mb-2">
    <MudText>برای بررسی پینگ لطفا آدرس آی‌پی یا هاست مورد نظر خود را وارد نمایید</MudText>
    <MudText>توجه فرمایید که عملیات پینگ توسط سرور DNSLab انجام میشود</MudText>
</MudAlert>
<MudGrid>
    <MudItem sm="6" xs="12">
        <MudTextField T="string" Label="آدرس هاست" Class="mud-ltr" Placeholder="dnslab.link" Variant="Variant.Outlined" @bind-Value="_Host" />
    </MudItem>
</MudGrid>

<BaseButton Class="my-2" EndIcon="@Icons.Material.Filled.Search" Variant="Variant.Filled" Color="Color.Primary" OnClick="CalcPing">بررسی</BaseButton>

@if (!String.IsNullOrWhiteSpace(_Result))
{
    <MudTextField T="string" Class="mud-ltr" Value="@_Result" Variant="Variant.Outlined" Lines="23" ReadOnly />
}
