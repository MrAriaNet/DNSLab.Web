@attribute [Route(AllRoutes.Ping)]

<SeoProvider Title="Ping - پینگ" Meta_Description="آدرس هاست مورد نظر خود را با استفاده از این ابزار پینگ بگیرید" />

<MudText Typo="Typo.h1" Align="Align.Center">Ping - پینگ</MudText>
<MudText Class="mt-5 mb-10" Align="Align.Center">
    برای بررسی پینگ لطفا آدرس آی‌پی یا هاست مورد نظر خود را وارد نمایید
    <MudFlexBreak />
    توجه فرمایید که عملیات پینگ توسط سرور DNSLab انجام میشود
</MudText>

<MudCard Elevation="0">
    <MudCardContent>
        <MudGrid>
            <MudItem sm="4" xs="12">
                <MudTextField T="string" Label="آدرس هاست" Class="dnslab-ltr" Placeholder="dnslab.link" Variant="Variant.Outlined" @bind-Value="_Host" />
            </MudItem>
        </MudGrid>

        <BaseButton Class="my-2" EndIcon="@DNSLabIcons.Search" Variant="Variant.Filled" Color="Color.Primary" OnClick="CalcPing">بررسی</BaseButton>

        @if (!String.IsNullOrWhiteSpace(_Result))
        {
            <CodeSnippet Language="powershell" Code="@_Result" />
        }
    </MudCardContent>
</MudCard>
