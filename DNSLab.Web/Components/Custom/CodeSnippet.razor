<MudPaper Outlined>
    <MudStack Row Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center" Style="">
        <MudIconButton Icon="@DNSLabIcons.Copy" OnClick="Copy" Size="Size.Small" Class="mr-3 my-1" />
        <MudText Typo="Typo.caption" Class="ml-3 my-1">@Language</MudText>
    </MudStack>
    <MudDivider DividerType="DividerType.FullWidth" Style="opacity:0.4" />
    <MudStack Class="pa-3" Style="background-color:var(--mud-palette-background)">
        <MudText Typo="Typo.caption" Style="direction:ltr" Tag="@("pre")" @key=Code>
            @Code
        </MudText>
    </MudStack>
</MudPaper>

@code {
    [Inject] private IJSRuntime JSRuntime { get; set; }

    [Parameter] public string Code { get; set; }
    [Parameter] public string Language { get; set; } = "csharp";


    async Task Copy()
    {
        await JSRuntime.InvokeAsync<bool>("clipboardCopy.copyText", Code);
    }
}
